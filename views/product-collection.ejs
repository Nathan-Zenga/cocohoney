<%_ include partials/header _%>
        <section>
            <div class="container section-label">
                <div class="label-bg"></div>
                <div class="label-text"><h2><%= title.toUpperCase().replace(/ collection/i, "") %></h2></div>
            </div>
            <div class="thumb-container">
                <div class="container">
                    <div class="row">
                        <%_ collection.forEach(product => { _%>
                        <div class="thumb col-md-3 col-sm-4">
                            <a href="/product/<%= product.category + '/' + product.name %>">
                                <div class="thumb-img product-image" style="background-image: url('<%- product.image.url %>');"></div>
                            </a>
                            <div class="thumb-info">
                                <div class="product-name"><p><%= product.name %></p></div>
                                <div class="product-price">
                                    <%_ const price = sale ? product.price_sale : product.price;
                                        const price_original = sale ? " <del>£" + (product.price / 100).toFixed(2) + "</del>" : "" _%>
                                    <p>£<%- (price / 100).toFixed(2) + price_original %></p>
                                </div>
                                <div class="cart-options">
                                    <form class="add-to-cart minimal" action="/shop/cart/add">
                                        <input type="hidden" name="id" value="<%- product.id %>">
                                        <button class="add-to-cart-btn"><i class="fal fa-cart-arrow-down" style=""></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%_ }) _%>
                    </div>
                </div>
            </div>
        </section>
<%_ include partials/footer _%>

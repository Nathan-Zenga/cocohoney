<%- include ('partials/header') -%>
    <br>
    <section>
        <div class="container">
            <div class="profile-info">
                <div class="row">
                    <div class="info col-sm-7">
                        <h1><%= user.firstname +" "+ user.lastname %></h1>
                        <p><%= user.email %></p>
                    </div>
                    <div class="options col-sm-5">
                        <button type="button" data-toggle="modal" data-target="#settings-modal">
                            EDIT PROFILE
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-view-md section-dropdown-options">
            <label>SELECT PAGE <i class="dropdown-arrow fal fa-chevron-down"></i></label>
            <select>
                <option value="#history">PURCHASE HISTORY</option>
            </select>
        </div>
        <div class="nav-pills-container dt-view-md">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#history">PURCHASE HISTORY</a></li>
            </ul>
        </div>
        <div class="tab-content">

            <div id="history" class="tab-pane fade in active">
                <div class="thumb-container no-wrap">
                    <div class="container">
                        <div class="row">
                            <%_ orders.forEach((order, i, arr) => { _%>
                            <div class="thumb" style="max-width: 500px; margin-right: 15px">
                                <div class="thumb-inner">
                                    <div class="thumb-info" style="text-align: left; padding: 10px; height: 180px">
                                        <div class="order-header">
                                            <div class="row">
                                                <div class="col-sm-6 order-name"><p>Order #<%- arr.length - i %></p></div>
                                                <%_ const day = order.created_at.getDate(); _%>
                                                <%_ const month = order.created_at.getMonth(); _%>
                                                <%_ const year = order.created_at.getFullYear(); _%>
                                                <div class="col-sm-6 order-date" style="text-align: right">
                                                    <p><%= `${day}/${month}/${year}` %></p>
                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="order-summary">
                                            <ul style="padding-left: 15px">
                                                <%_ const list_filtered = order.cart.slice(0, 3); _%>
                                                <%_ const diff_length = order.cart.length !== list_filtered.length; _%>
                                                <%_ list_filtered.forEach((item, i, arr) => { _%>
                                                <li><%- item.qty %> x <%- item.name %></li>
                                                <%_ }) _%>
                                                <%- diff_length ? "..." : "" %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%_ }) _%>
                        </div>
                    </div>
                </div>
            </div>

            <div id="settings-modal" class="modal fade in" role="dialog">
                <div class="modal-icons">
                    <button type="button" class="close-view" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/account/edit">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label>FIRST NAME</label>
                                    <input type="text" name="firstname" required>
                                </div>
                                <div class="col-sm-6">
                                    <label>LAST NAME</label>
                                    <input type="text" name="lastname" required>
                                </div>
                            </div>
                        </fieldset>

                        <label>PHONE NUMBER <span>(OPTIONAL)</span></label>
                        <input type="tel" name="phone_number" pattern="[0-9]{11}">

                        <label>EMAIL</label>
                        <input type="email" name="email" required>

                        <input type="submit" value="UPDATE">
                    </form>
                </div>
            </div>

        </div>
    </section>
<%- include ('partials/footer') -%>
<%- include ('partials/header') -%>
    <div class="form-container">
        <form method="post" action="/account/password-reset-request">
            <fieldset>
                <div style="text-align: center">
                    <p>You'll receive an email with a link to reset your password</p>
                </div>

                <label>EMAIL</label>
                <input type="email" name="email" id="email" required>

                <input type="submit" value="RESET PASSWORD">
            </fieldset>
        </form>
    </div>
    <script>
        $("form").submit(function(e) {
            e.preventDefault();
            var btnController = new submitBtnController(this);
            $.post(this.action, $(this).serializeArray(), function(result) {
                alert(result);
                location.href = "/";
            }).fail(function(err) {
                alert(err.responseText);
            }).always(function() {
                btnController.finish();
            });
        });
    </script>
<%- include ('partials/footer') -%>
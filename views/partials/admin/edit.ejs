<div class="col-md-3 sidebar" id="edit-sidebar">
    <div class="mb-view-md section-dropdown-options" style="font-weight: bold; max-width: 250px; margin: 0 auto">
        <label>SELECT OPTION <i class="dropdown-arrow fal fa-chevron-down"></i></label>
        <select>
            <option value="#edit-member">MEMBER</option>
            <option value="#edit-product">SHOP PRODUCT</option>
        </select>
    </div>
    <ul class="nav nav-pills nav-stacked dt-view-md">
        <li class="active"><a data-toggle="pill" href="#edit-member">MEMBER</a></li>
        <li><a data-toggle="pill" href="#edit-product">SHOP PRODUCT</a></li>
    </ul>
</div>
<div class="col-md-9">
    <div class="tab-content" style="padding-top: 10px;">

        <div id="edit-member" class="tab-pane fade in active">
            <form method="POST" action="/mailing-list/update">
                <label>CHOOSE MEMBER <i class="dropdown-arrow fal fa-chevron-down"></i></label>
                <select name="member_id" id="member_id">
                    <option value="">-</option>
                    <%_ [].forEach(member => { _%>
                    <option value="<%= member._id %>"><%= member.firstname + " " + member.lastname %></option>
                    <%_ }) _%>
                </select>
                <div class="input-group" style="display: block">
                    <div class="col-sm-6">
                        <label>FIRST NAME</label>
                        <input type="text" name="firstname" id="firstname_edit" required>
                    </div>
                    <div class="col-sm-6">
                        <label>LAST NAME</label>
                        <input type="text" name="lastname" id="lastname_edit" required>
                    </div>
                </div>
                <label>EMAIL</label>
                <input type="email" name="email" id="email_edit" required>
                <div class="input-group" style="display: block">
                    <%_ var sizes = ["XS", "S", "M", "L", "XL", "XXL", "XXXL"]; _%>
                    <div class="col-sm-6">
                        <label>SIZE (TOP)</label>
                        <select name="size_top" id="size_top_edit" required>
                            <option value="">Select size</option>
                            <%_ sizes.forEach(size => { _%>
                            <option value="<%= size %>"><%= size %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label>SIZE (BOTTOMS)</label>
                        <select name="size_bottom" id="size_bottom_edit" required>
                            <option value="">Select size</option>
                            <%_ sizes.forEach(size => { _%>
                            <option value="<%= size %>"><%= size %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                </div>
                <label>EXTRA INFO (OPTIONAL)</label>
                <textarea name="extra_info" id="extra_info_edit"></textarea>
                <input type="submit" value="UPDATE MAILING LIST">
            </form>
        </div>

        <div id="edit-product" class="tab-pane fade">
            <form method="post" action="/product/stock/edit">
                <label>CHOOSE PRODUCT <i class="dropdown-arrow fal fa-chevron-down"></i></label>
                <select name="product_id" id="product_id">
                    <option value="">-</option>
                    <%_ products.forEach(item => { _%>
                    <option value="<%= item._id %>"><%= item.name %></option>
                    <%_ }) _%>
                </select>

                <label>PRODUCT NAME</label>
                <input type="text" name="name" id="product_name_edit" required>

                <label>PRICE (Â£)</label>
                <input type="number" name="price" id="price_edit" min="0.01" step="0.01" required>

                <label>TOTAL IN STOCK</label>
                <input type="number" name="stock_qty" id="stock_qty_edit" min="1" value="1" required>

                <label>PRODUCT INFO <span>(OPTIONAL)</span></label>
                <textarea name="info" id="product_info_edit" rows="10"></textarea>

                <label>PRODUCT IMAGE</label>
                <div class="input-group file-upload-container row">
                    <div class="col-sm-6 col-xs-9"><input type="file" id="product_image_file_edit" accept=".jpg,.jpeg,.png,.bmp"></div>
                    <input type="hidden" name="image_file">
                    <div class="col-sm-6 col-xs-3"><button type="button" class="clear-uploads" data-id="product_image_file_edit">CLEAR</button></div>
                    <div class="col-sm-12"><input type="url" name="image_url" id="product_image_url_edit" placeholder="Or enter the image URL"></div>
                </div>

                <input type="submit" value="SAVE">
            </form>
        </div>

    </div>
</div>

<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#ambassadors">AMBASSADORS</a></li>
    <li><a data-toggle="pill" href="#orders">ORDERS</a></li>
    <li><a data-toggle="pill" href="#amb-sales-report">SALES REPORT</a></li>
</ul>

<div class="tab-content" style="padding-top: 2em">
    <div id="ambassadors" class="tab-pane fade in active">
        <div class="info-label" style="text-align: center">
            <i class="fal fa-info-circle info-icon"></i>
            <b>Click a name to go to their account page</b>
        </div>
        <ul style="text-align: left">
            <% ambassadors.forEach(amb => { %>
            <li>
                <a href="/admin/ambassador/account?firstname=<%- amb.firstname %>&lastname=<%- amb.lastname %>">
                    <%- `${amb.firstname} ${amb.lastname}` %>
                </a>
                <div>
                    <%_ if (amb.verified === false) { _%>
                    <form class="verify-ambassador-form minimal" method="post" action="/ambassador/register/verify" style="display: inline-block; margin: 5px 5px 5px 0">
                        <input type="hidden" name="token" value="<%- amb.token %>">
                        <button type="submit" style="padding: 6px 10px">Verify</button>
                    </form>
                    <%_ } _%>
                    <form class="delete-ambassador-form minimal" method="post" action="/ambassador/delete" style="display: inline-block; margin: 5px 0">
                        <input type="hidden" name="id" value="<%- amb._id %>">
                        <button type="submit" style="padding: 6px 10px">Delete</button>
                    </form>
                </div>
            </li>
            <% }) %>
        </ul>
    </div>

    <div id="orders" class="tab-pane fade">
        <div class="info-label" style="text-align: center">
            <i class="fal fa-info-circle info-icon"></i>
            <b>Labelled by customer name</b>
        </div>
        <ul style="text-align: left">
            <% orders.forEach(order => { %>
            <li>
                <%- `${order.customer_name}` %>
                <div>
                    <a href="/order/<%- order.id %>">
                        <button type="button" style="padding: 6px 10px; font-weight: 400">View details</button>
                    </a>
                    <%_ if (!order.tracking_ref) { _%>
                    <a href="/shipping/tracking/ref/send?id=<%= order.id %>">
                        <button type="button" style="padding: 6px 10px; font-weight: 400">Add Tracking Number</button>
                    </a>
                    <%_ } _%>
                </div>
            </li>
            <% }) %>
        </ul>
    </div>
    
    <div id="amb-sales-report" class="tab-pane fade">
        <form id="report-submit-form" action="/report/submit">
            <fieldset>
                <legend>AMBASSADOR SALES REPORT</legend>
                <div class="row">
                    <div class="col-xs-6">
                        <label>MONTH <i class="dropdown-arrow fal fa-chevron-down"></i></label>
                        <select name="month">
                            <%_ const months = [ "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" ];
                                months.forEach((m, i) => { _%>
                            <option value="<%= i %>"<%- i === new Date().getMonth() ? ' selected' : '' %>><%= m %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                    <div class="col-xs-6">
                        <label>YEAR <i class="dropdown-arrow fal fa-chevron-down"></i></label>
                        <select name="year">
                            <%_ const current_year = new Date().getFullYear();
                                const years = [current_year];
                                for (let y = current_year-1; y >= 2020; y--) years.push(y);
                                years.forEach(y => { _%>
                            <option value="<%= y %>"><%= y %></option>
                            <%_ }) _%>
                        </select>
                    </div>
                </div>
            </fieldset>
            <button type="submit">SEND</button>
        </form>
    </div>

</div>
